<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <menu value="index" />
</head>
<body>
  <body>
    <div id="app">
      <%- include('../partials/menu'); %>
      <div id="main">
        <header class="mb-3">
          <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
          </a>
        </header>
        <div class="page-heading">
          <div class="page-title">
            <div class="row">
              <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>BD2 Ripoli/Pizzuti</h3>
              </div>
            </div>
          </div>
          <section class="section">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Artisti</h4>
              </div>
              <div class="card-body">

                <table class="table" id="table_artisti" class="display responsive nowrap" style="width:100%">

                </table>
              </div>
            </div>
          </section>
          <section class="section">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Canzoni</h4>
              </div>
              <div class="card-body">
                <table class="table" id="table_canzoni" class="display responsive nowrap" style="width:100%">

                </table>
                
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </body>
  <%- include('../partials/footer'); %>

  <script src="/assets/js/table.js"></script>
  <script src="/assets/js/util.js"></script>
  <script type="text/javascript">

    $(document).ready(function () {
      $("#table_artisti").customTable({
        order:[2,'desc'],
        url:'/api/artists',
        fieldName:"name",
        columns:[
        { data: 'name' },
        { data: 'popularity' },
        { data: 'followers' },
        { data: 'genres' },
        { data: 'id' },

        ],
        columnsName:[
        "Nome","Popolarità (%)","Followers","Generi","Visualizza"
        ],
        placeHolder:"Nome",
        map:{
          genres:function(x){
            return arrayToString(x);
          }
        },
        columnDefs: [
        {
          targets: -1,
          data: "id",
          render:function(data,type,row,meta){
            return '<a class="btn btn-primary" href=/artist/'+data+'>Dettagli</a>';

          }
        },
        ]
      });
      $("#table_canzoni").customTable({
        order:[2,'desc'],
        url:'/api/tracks',
        fieldName:"name",
        columns:[
        { data: 'name' },
        { data: 'artists' },
        { data: 'release_date' },
        { data: 'duration_ms' },
        { data: 'popularity' }
        ],
        columnsName:["Nome","Artisti","Data rilascio","Durata","Popolarità"],
        placeHolder:"Nome",
        map:{
          duration_ms:function(x){
            return msToTime(x);
          },
          artists:function(x){
            return arrayToString(x);
          },
          release_date:function(x){

            return moment(x).format("DD/MM/yyyy");
          }
        }
      });
    });
  </script>

</body>
</html>